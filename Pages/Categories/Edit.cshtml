@page
@model ShopApp.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="vstack gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.Id" />
            <div class="form-group">
                <label asp-for="Category.Title" class="form-label"></label>
                <input asp-for="Category.Title" class="form-control" />
                <span asp-validation-for="Category.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.CatalogueId" class="form-label"></label>
                <select asp-for="Category.CatalogueId" class="form-control" asp-items="ViewBag.CatalogueId"></select>
                <span asp-validation-for="Category.CatalogueId" class="text-danger"></span>
            </div>
            <div class="form-group hstack gap-3 mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <div class="vr"></div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
