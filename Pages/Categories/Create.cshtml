@model ShopApp.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="vstack gap-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Category.CatalogueId" class="control-label"></label>
                    <select asp-for="Category.CatalogueId" class="form-select" asp-items="ViewBag.CatalogueId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Category.Title" class="control-label"></label>
                    <input asp-for="Category.Title" class="form-control" />
                    <span asp-validation-for="Category.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="hstack gap-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <div class="vr"></div>
                        <a asp-page="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
